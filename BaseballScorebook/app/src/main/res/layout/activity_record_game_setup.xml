<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.duxnort.baseballscorebook.RecordGameSetupActivity"
    android:background="@drawable/fieldbackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Home Team"
                android:id="@+id/textView9"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/spinner3"
                android:background="@color/colorWhite"
                android:layout_gravity="center" />

            <include
                layout="@layout/add_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Away Team"
                android:id="@+id/textView8"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/spinner2"
                android:background="@color/colorWhite"
                android:layout_gravity="center" />

            <include
                layout="@layout/add_button"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Field Name"
            android:id="@+id/textView7"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="25dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:hint="ex: Jacobs Field"
            android:textColorHint="@color/abc_background_cache_hint_selector_material_dark"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Umpire Name (Optional)"
            android:id="@+id/textView10"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText6"
                android:background="@color/colorWhite"
                android:hint="ex: Jim Johnson"
                android:textStyle="italic"
                android:textColorHint="@color/abc_background_cache_hint_selector_material_dark"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Add"
                android:id="@+id/button3"
                android:background="@drawable/green_rounded01"
                android:layout_gravity="center" />
        </LinearLayout>

        <ListView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:id="@+id/listView"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    layout="@layout/back_button"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="46dp"
                    android:id="@+id/btnBack"
                    android:layout_alignTop="@+id/btnNext"
                    android:layout_alignParentStart="true" />

                <include
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    layout="@layout/next_button"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btnNext"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="56dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
