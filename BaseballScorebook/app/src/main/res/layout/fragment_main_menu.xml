<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duxnort.baseballscorebook.MainMenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="left|top"
        android:id="@+id/main_menu_container"
        android:padding="20dp"
        android:background="@drawable/fieldbackground">


        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/record_game"
            android:id="@+id/button_record_game"
            android:background="@drawable/mainmenu"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/create_team"
            android:id="@+id/button_create_team"
            android:background="@drawable/mainmenu"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/settings"
            android:id="@+id/button_settings"
            android:background="@drawable/mainmenu"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/help"
            android:id="@+id/button_help"
            android:background="@drawable/mainmenu"
            android:layout_gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
