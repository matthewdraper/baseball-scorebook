<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duxnort.baseballscorebook.BatterRetiredFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Foul Out"
                android:id="@+id/button14"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Fly Out"
                android:id="@+id/button15"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Strikeout Swinging"
                android:id="@+id/button16"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="13dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Strikeout Looking"
                android:id="@+id/button20"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="13dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Ground Out"
                android:id="@+id/button5"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Lineout"
                android:id="@+id/button18"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Unassisted"
                android:id="@+id/button19"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Sac Fly"
                android:id="@+id/button21"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Sac Bunt"
                android:id="@+id/button22"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Double Play"
                android:id="@+id/button23"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Triple Play"
                android:id="@+id/button24"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
