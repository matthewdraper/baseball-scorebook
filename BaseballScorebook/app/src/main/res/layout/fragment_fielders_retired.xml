<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duxnort.baseballscorebook.FieldersRetiredFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter Positions Involved"
            android:id="@+id/txtEnterPositions"
            android:layout_gravity="center"
            android:textSize="25dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="C"
                android:id="@+id/btnCatcher"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="P"
                android:id="@+id/btnPitcher"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1B"
                android:id="@+id/btnFirstBase"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2B"
                android:id="@+id/btnSecondBase"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="SS"
                android:id="@+id/btnShortStop"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3B"
                android:id="@+id/btnThirdBase"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="DELETE"
                android:id="@+id/btnDelete"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="LF"
                android:id="@+id/btnLeftField"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="CF"
                android:id="@+id/btnCenterField"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="RF"
                android:id="@+id/btnRightField"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="DONE"
                android:id="@+id/btnDone"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GO "
                android:id="@+id/txtOutType"
                android:layout_gravity="center"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="6-3"
                android:id="@+id/txtPositions"
                android:layout_gravity="center"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
