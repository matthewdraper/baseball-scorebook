<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duxnort.baseballscorebook.ReachedBaseFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Single"
                android:id="@+id/button9"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Double"
                android:id="@+id/button3"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Triple"
                android:id="@+id/button4"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Home Run"
                android:id="@+id/button6"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Error"
                android:id="@+id/button7"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Fielder&apos;s Choice"
                android:id="@+id/button8"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Intentional Walk"
                android:id="@+id/button12"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="12dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Walk"
                android:id="@+id/button13"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#ffe100"
                android:textSize="15dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
