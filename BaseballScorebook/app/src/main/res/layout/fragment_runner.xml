<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duxnort.baseballscorebook.RunnerFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Runner Events"
            android:id="@+id/textView13"
            android:layout_gravity="center"
            android:textColor="@color/colorTextPrimary"
            android:background="@color/colorWhite"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Out"
                android:id="@+id/button3"
                android:background="@drawable/red_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Scored"
                android:id="@+id/button5"
                android:background="@drawable/orange_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Advanced"
                android:id="@+id/button4"
                android:background="@drawable/green_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Stolen Base"
                android:id="@+id/button6"
                android:background="@drawable/purple_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Caught Stealing"
                android:id="@+id/button7"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
