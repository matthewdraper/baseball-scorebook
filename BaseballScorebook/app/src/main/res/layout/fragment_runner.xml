<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.RunnerFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Out"
                android:id="@+id/btnOut"
                android:background="@drawable/red_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Scored"
                android:id="@+id/btnScored"
                android:background="@drawable/orange_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Advanced"
                android:id="@+id/btnAdvanced"
                android:background="@drawable/green_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Stolen Base"
                android:id="@+id/btnStolenBase"
                android:background="@drawable/purple_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Caught Stealing"
                android:id="@+id/btnCaughtStealing"
                android:background="@drawable/black_rounded"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="UNDO"
                android:id="@+id/btnUndo"
                android:background="@drawable/white_rounded"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:alpha=".95"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
